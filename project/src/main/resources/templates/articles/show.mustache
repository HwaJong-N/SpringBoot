{{>layouts/header}}

<table class="table">

    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>

    <tbody>
    <!-- model에 등록된 데이터는 #attributeName 으로 선언 후 사용 가능 -->
    {{#article}}
        <tr>
            <!-- model에 등록된 데이터 -->
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>

</table>

<a href="/articles/{{article.id}}/edit" class = "btn btn-primary">Edit</a>
<a href="/articles/{{article.id}}/delete" class = "btn btn-danger">Delete</a>
<a href="/articles">Back To Article List</a>

{{>comments/_comments}}


{{>layouts/footer}}